{% extends 'base.html.twig' %}

{% block title %}{{ 'Пользователи' }}{% endblock %}

{% block body %}
    <div class="row ">
        <div class="col-12 grid-margin">
            <div class="card card-body">
                <table class="table table-bordered">
                    <thead>
                    <tr>
                        <th>{{ '#' }}</th>
                        <th>{{ 'Имя' }}</th>
                        <th>{{ 'Фамилия' }}</th>
                        <th>{{ 'Дата рождения' }}</th>
                        <th>{{ 'Статус' }}</th> 
                    </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ loop.index }}</td>
                                <td>{{ user.firstName }}</td>
                                <td>{{ user.lastName }}</td>
                                <td>{{ user.birthDate | date('Y/m/d') }}</td>
                                <td>{{ user.getTitleStatus[user.status] }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
