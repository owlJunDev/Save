{% extends 'base.html.twig' %}

{% block title %}
	{{ project.title }}
{% endblock %}
{% block body %}
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-12">

                        <div class="preview-list">
                            <div class="preview-item border-bottom">
                                <div class="flex-grow">
                                    <h6 class="preview-subject">{{ 'Название' }}</h6>
                                    <p class="text-muted mb-0">{{ project.title }}</p>
                                </div>
                            </div>
                        </div>

                        <div class="preview-list">
                            <div class="preview-item border-bottom">
                                <div class="flex-grow">
                                    <h6 class="preview-subject">{{ 'Дата начала' }}</h6>
                                    <p class="text-muted mb-0">{{ project.startDate | date('Y/m/d') }}</p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="preview-list">
                            <div class="preview-item border-bottom">
                                <div class="flex-grow">
                                    <h6 class="preview-subject">{{ 'Дата заверешния' }}</h6>
                                    <p class="text-muted mb-0">{{ project.endDate | date('Y/m/d') }}</p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="preview-list">
                            <div class="preview-item border-bottom">
                                <div class="flex-grow">
                                    <h6 class="preview-subject">{{ 'Дата создания' }}</h6>
                                    <p class="text-muted mb-0">{{ project.createdDate | date('Y/m/d') }}</p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="preview-list">
                            <div class="preview-item border-bottom">
                                <div class="flex-grow">
                                    <h6 class="preview-subject">{{ 'План/Факт' }}</h6>
                                    <p class="text-muted mb-0">{{ project.pricePlan ~ '/' ~ project.priceFact }}</p>
                                </div>
                            </div>
                        </div>
                        
                        {# <div class="preview-list">
                            <div class="preview-item border-bottom">
                                <div class="flex-grow">
                                    <h6 class="preview-subject">{{ '' }}</h6>
                                    <p class="text-muted mb-0">{{ project }}</p>
                                </div>
                            </div>
                        </div> #}
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 row">
            <div class="col-12 grid-margin">
                <div class="card card-body">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>{{ '#' }}</th>
                            <th>{{ 'участники' }}</th>
                        </tr>
                        </thead>
                        <tbody>
                            {% for member in members %}
                                <tr>
                                    <td>{{ loop.index }}</td>
                                    <td>{{ member.user.lastNameWithInitials }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-12 row">
        <div class="col-12 grid-margin">
            <button type="button" data-toggle="modal" data-target="#modal" class="btn btn-outline-primary mdi mdi-plus-circle">{{ 'Добавить заявку' }}</button>
            <div class="card card-body">
                <table class="table">
                    <thead>
                    <tr>
                        <th>{{ '#' }}</th>
                        <th>{{ 'Материал' }}</th>
                        <th>{{ 'Кол-во' }}</th>
                        <th>{{ 'Контрагент' }}</th>
                        <th>{{ 'Цена' }}</th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for request in requests %}
                            <tr>
                                <td>{{ loop.index }}</td>
                                <td>{{ request.material.title }}</td>
                                <td>{{ request.qty }}</td>
                                <td>{{ request.supplier.lastNameWithInitials }}</td>
                                <td>{{ request.price }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
{% block modal %}
    <h4 class="card-title">{{ 'Добавить заявку' }}</h4>
    <form action="{{ path('add_request') }}" method="post" enctype="multipart/form-data">

        <input type="hidden" value="{{ project.id }}" class="form-control" name="request[projectId]">
        <div class="form-group">
            <label>{{ 'Счёт' }}</label>
            <select class="form-control js-example-basic-single" style="width:100%" required name="request[invoiceId]">
                <option value="">{{ 'Выберите счёт' }}</option>
                {% for invoice in invoices %}
                    <option value="{{ invoice.id }}">{{ invoice.numberInvoice }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group">
            <label>{{ 'Контрагент' }}</label>
            <select class="form-control js-example-basic-single" style="width:100%" required name="request[supplierId]">
                <option value="">{{ 'Выберите контрагента' }}</option>
                {% for supplier in suppliers %}
                    <option value="{{ supplier.id }}">{{ supplier.lastNameWithInitials }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group">
            <label>{{ 'Материал' }}</label>
            <select class="form-control js-example-basic-single" style="width:100%" required name="request[materialId]">
                <option value="">{{ 'Выберите материал' }}</option>
                {% for material in materials %}
                    <option value="{{ material.id }}">{{ material.title }}</option>
                {% endfor %}
            </select>
        </div> 
        <div class="form-group">
            <label>{{ 'Кол-во' }}</label>
            <input type="number" required class="form-control" name="request[qty]">
        </div>
        <div class="form-group">
            <label>{{ 'Цена' }}</label>
            <input type="number" required class="form-control" name="request[price]">
        </div>

        <button class="btn btn-primary" data-dismiss="modal">{{ 'Отменить' }}</button>
        <button type="submit" href = "#" class="btn btn-primary mr-20">{{ 'Добавить' }}</button>
    </form>
{% endblock %}
