{% extends 'base.html.twig' %}

{% block title %}{{ 'Invoice' }}{% endblock %}

{% block body %}
    <div class="row ">
        <div class="col-12 grid-margin">
{#
        <div class="example-wrapper row no=gutters">
			<a class="btn btn-success" data-toggle="modal" data-target="#add-file" style = "color:black">add image</a>
		</div>

 #}

            <button type="button" data-toggle="modal" data-target="#modal" class="btn btn-outline-primary mdi mdi-plus-circle">{{ 'Add invoice' }}</button>
            <div class="card card-body">
                <table class="table table-bordered">
                    <thead>
                    <tr>
                        <th>{{ '#' }}</th>
                        <th>{{ 'Nomber Invoice' }}</th>
                        <th>{{ 'Amount' }}</th>
                        <th>{{ 'Date create' }}</th>
                        <th>{{ 'Owner' }}</th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for invoice in invoices %}
                            <tr>
                                <td>{{ loop.index }}</td>
                                <td>{{ invoice.numberInvoice }}</td>
                                <td>{{ invoice.amount }}</td>
                                <td>{{ invoice.createDate | date('Y/m/d') }}</td>
                                <td>{{ invoice.getuser.lastNameWithInitials }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}
    {% block modal %}
        <h4 class="card-title">{{ 'Add invoice' }}</h4>
        <form action="{{ path('add_invoice') }}" method="post" enctype="multipart/form-data">

            <div class="form-group">
                <label for="exampleInputUsername">{{ 'Number Invoice' }}</label>
                <input type="text" required class="form-control" name="invoice[numberInvoice]" placeholder="Number Invoice">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">{{ 'Amount' }}</label>
                <input type="text" required class="form-control" name="invoice[amount]" placeholder="Amount">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1"> {{ 'Owner' }} </label>
                <select class="form-control form-control-sm" name="invoice[owner]">
                    {% for user in users %}
                        <option value="{{ user.id }}">{{ user.lastNameWithInitials }}</option>
                    {% endfor %}

                </select>
            </div>

            <button class="btn btn-primary" data-dismiss="modal">{{ 'Cancel' }}</button>
            <button type="submit" href = "#" class="btn btn-primary mr-20">{{ 'Add' }}</button>
        </form>
    {% endblock %}
